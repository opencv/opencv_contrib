<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.opencv.sample.poseestimation">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/opencv_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.opencv.sample.app.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.opencv.sample.app.SettingsActivity"
            android:label="@string/title_activity_settings_actvity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="org.opencv.sample.app.EstimationActivity"
            android:label="+@string/title_activity_estimation_actvity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name="org.opencv.sample.app.CalibrationActivity"
            android:label="+@string/title_activity_calibration_actvity"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>